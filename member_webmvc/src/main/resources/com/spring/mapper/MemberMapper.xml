<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.MemberMapper">
	
	<!-- 암호화 된 비번 가져오기 -->
	<select id="getPass" resultType="java.lang.String">
		SELECT password FROM membertbl WHERE userid=#{userid} 
	</select>
	
	<!-- 회원조회 : userid,password 일치 시 -->
	<select id="login" resultType="com.spring.domain.AuthDTO">
		SELECT userid, name FROM membertbl WHERE userid=#{userid} 
	</select>

    <!-- 회원 가입 : 5개 (userid, password, name, gender, email) -->
	<insert id="register">
		INSERT INTO membertbl(userid, password, name, gender, email)
		VALUES(#{userid},#{password},#{name},#{gender},#{email})
	</insert>
	
